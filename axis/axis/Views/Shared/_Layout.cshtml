                color: #ffffff;
                text-decoration: none;
                position: relative;
                transition: color 0.3s ease;
            }

                footer a::before {
                    content: '';
                    position: absolute;
                    bottom: -2px;
                    left: 0;
                    width: 0;
                    height: 2px;
                    background-color: #ffffff;
                    transition: width 0.3s ease;
                }

                footer a:hover {
                    color: #ffffff;
                }

                    footer a:hover::before {
                        width: 100%;
                    }

            footer ul.list-inline {
                padding: 0;
            }

                footer ul.list-inline li {
                    display: inline;
                }

                    footer ul.list-inline li:not(:last-child)::after {
                        margin-left: 10px;
                        margin-right: 10px;
                    }


        .body-content {
            height: 100vh;
        }

        #popup {
            display: none;
            height: 300px;
            width: 230px;
            position: absolute;
            top: 100%;
            left: 80%; /* Adjust as needed */
            z-index: 999;
            background-color: #ffffff;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        .popup_link {
            color: #97144c;
            font-weight: bold;
            background-color: #97144c;
        }


        /* Add your CSS styles here */
        .slider-container {
            width: 500px;
            height: 300px;
            overflow: hidden;
            position: relative;
            margin-left: 100px;
            margin-top: 20px;
        }

        .slider-container {
            width: 500px;
            height: 300px;
            overflow: hidden;
            /* Add margin to the entire container */
            position: relative;
        }


        .slider {
            width: 1500px; /* 3 images, each 500px wide */
            height: 300px;
            display: flex;
            transition: transform 0.5s ease;
        }

        .slide {
            width: 500px;
            height: 300px;
        }

        .slider img {
            width: 100%;
            height: 100%;
        }

        .slider-nav {
            position: absolute;
            bottom: 10px;
            left: 50%;
            transform: translateX(-50%);
        }

            .slider-nav i {
                cursor: pointer;
                font-size: 20px;
                margin: 0 5px;
                color: rgba(0, 0, 0, 0.5);
            }

                .slider-nav i.active {
                    color: #000; /* Color for active icon */
                }

                .slider-nav i.active {
                    color: #97144c; /* Pink color for active icon */
                }
    </style>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script>
        $(document).ready(function () {
            var timeout;

            // When the login link is hovered
            $("a#login-link").hover(
                function () {
                    // Clear any existing timeouts
                    clearTimeout(timeout);
                    // Show the div
                    $("#popup").show();
                },
                function () {
                    // Set a timeout to hide the div after a short delay (e.g., 500 milliseconds)
                    timeout = setTimeout(function () {
                        $("#popup").hide();
                    }, 500);
                }
            );

            // When the login popup is hovered
            $("#popup").hover(
                function () {
                    // Clear any existing timeouts
                    clearTimeout(timeout);
                },
                function () {
                    // Set a timeout to hide the div after a short delay (e.g., 500 milliseconds)
                    timeout = setTimeout(function () {
                        $("#popup").hide();
                    }, 500);
                }
            );
        });

        // JavaScript for sliding functionality
        let currentIndex = 0;
        const slideCount = 3;
        const slideWidth = 500;

        function showSlide(index) {
            currentIndex = index;
            const transformValue = -currentIndex * slideWidth;
            document.querySelector(
                ".slider"
            ).style.transform = `translateX(${transformValue}px)`;

            // Update the active icon
            document.querySelectorAll(".slider-nav i").forEach((icon, i) => {
                if (i === currentIndex) {
                    icon.classList.add("active");
                } else {
                    icon.classList.remove("active");
                }
            });
        }

        // Initial slide
        showSlide(currentIndex);

    </script>



</head>
