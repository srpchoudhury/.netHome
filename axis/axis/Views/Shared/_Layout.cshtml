                text-decoration: none;
                position: relative;
                transition: color 0.3s ease;
            }

                .navbar a::before {
                    content: '';
                    position: absolute;
                    bottom: -2px;
                    left: 0;
                    width: 0;
                    height: 2px;
                    background-color: #ffffff;
                    transition: width 0.3s ease;
                }

                .navbar a:hover {
                    color: #ffffff !important;
                }

