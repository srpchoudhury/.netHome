@model AxisBank_tblAllAccount
@{
    ViewBag.Title = "WithdrawOperation";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script>

    var EMessage = '@TempData["NotWithdraw"]';
var zero = '@TempData["Zero"]';

    if (EMessage) {
        Swal.fire({
            icon: 'error',
            text: EMessage,
            showCloseButton: true,
            confirmButtonText: 'OK'
        });
    } else if (zero) {
        Swal.fire({
            icon: 'error',
            text: zero,
            showCloseButton: true,
            confirmButtonText: 'OK'
        });
    } 
</script>

<h3>Withdraw Form</h3>
<hr />



<div class="container">
    @using (Html.BeginForm("CheckAccountForWithdrawOperation", "Admin", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
    {
        <div class="mb-3 row">
            <div class="col">
                <label class="form-label" for="lblEmail">Account No</label>
                @Html.TextBoxFor(model => model.AccountNo, new { @class = "form-control", required = "required", })
                @Html.ValidationMessageFor(model => model.AccountNo, "", new { @class = "text-danger" })

            </div>
            <div class="col">

                <button class="btn btn-danger" type="submit">Search</button>
            </div>



            </div>
            }
        </div>

