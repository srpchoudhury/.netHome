@model AxisBank_tblAllAccount
@{
    ViewBag.Title = "UserPanel";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
<link href="~/Content/Style.css" rel="stylesheet" />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="~/Scripts/script.js"></script>


<div class="card px-0 pt-4 pb-0 mt-3 mb-3">
    <h2 id="heading">Sign Up Your User Account</h2>
    <p>Fill all form field to go to next step</p>

    <form id="msform" action="@Url.Action("GetNewDetails", "User")" method="post">
        <!-- progressbar -->
        <ul id="progressbar">
            <li class="active" id="account"><strong>Account</strong></li>
            <li id="personal"><strong>Personal</strong></li>
            <li id="payment"><strong>Image</strong></li>
            <li id="confirm"><strong>Finish</strong></li>
        </ul>
        <div class="progress">
            <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar" aria-valuemin="0" aria-valuemax="100"></div>
        </div> <br> <!-- fieldsets -->
        <fieldset>
            <div class="form-card">
                <div class="row">
                    <div class="col-7">
                        <h2 class="fs-title">Account Information:</h2>
                    </div>
                    <div class="col-5">
                        <h2 class="steps">Step 1 - 4</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        @Html.LabelFor(model => model.RoleId, new { @class = "fieldlabels" })
                        @Html.DropDownListFor(model => model.RoleId, (IEnumerable<SelectListItem>)ViewData["ROLEselectListItems"], new { @class = "form-select", required = "required" })

                        @Html.LabelFor(model => model.FirstName, new { @class = "fieldlabels" })
                        @Html.TextBoxFor(model => model.FirstName, new { @placeholder = "Enter your FirstName", @name = "Username" })

                        @Html.LabelFor(model => model.LastName, new { @class = "fieldlabels" })
                        @Html.TextBoxFor(model => model.LastName, new { @placeholder = "Enter your LastName", @name = "Password" })

                        @Html.LabelFor(model => model.Password, new { @class = "fieldlabels" })
                        @Html.PasswordFor(model => model.Password, new { @placeholder = "Enter Your Password", @name = "ConfirmPassword" })

                    </div>
                    <div class="col-6">

                    </div>
                </div>

            </div>
            <input type="button" name="next" class="next action-button" value="Next" />
        </fieldset>
        <fieldset>
            <div class="form-card">
                <div class="row">
                    <div class="col-7">
                        <h2 class="fs-title">Personal Information:</h2>
                    </div>
                    <div class="col-5">
                        <h2 class="steps">Step 2 - 4</h2>
                    </div>
                </div>
                <div class="row">
                    <div class="col-6">
                        @Html.LabelFor(model => model.AccountType, new { @class = "fieldlabels" })
                        @Html.DropDownListFor(model => model.AccountType, new SelectList(new List<string> { "Savings", "Current", "Zero" }), "Select Account Type", new { @class = "form-select", required = "required" })

                        @Html.LabelFor(model => model.MobileNo, new { @class = "fieldlabels" })
                        @Html.TextBoxFor(model => model.MobileNo, new { @placeholder = "MobileNo", @name = "lname" })

                        @Html.LabelFor(model => model.MaritalStatus, new { @class = "fieldlabels" })
                        @Html.DropDownListFor(model => model.MaritalStatus, new SelectList(new List<string> { "Married", "Un Married" }), "Select Status", new { @class = "form-select", required = "required" })

                        @Html.LabelFor(model => model.DateOfBirth, new { @class = "fieldlabels" })
                        @Html.TextBoxFor(model => model.DateOfBirth, new { type="date" , @placeholder = "DateOfBirth", @name = "phno_2" })

                    </div>
                    <div class="col-6">
                        @Html.LabelFor(model => model.IdCardType, new { @class = "fieldlabels" })
                        @Html.DropDownListFor(model => model.IdCardType, new SelectList(new List<string> { "Pancard", "Adhar Card", "Other" }), "Select ID Card Type", new { @class = "form-select", required = "required" })

                        @Html.LabelFor(model => model.IdCardNumber, new { @class = "fieldlabels" })
                        @Html.TextBoxFor(model => model.IdCardNumber, new { @placeholder = "IdCardNumber", @name = "lname" })

                        @Html.LabelFor(model => model.Email, new { @class = "fieldlabels" })
                        @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email", @name = "phno" })

                        @Html.LabelFor(model => model.Address, new { @class = "fieldlabels" })
                        @Html.TextBoxFor(model => model.Address, new { @placeholder = "Address", @name = "phno_2" })

                    </div>
                </div>

            </div>
            <input type="button" name="next" class="next action-button" value="Next" />
            <input type="button" name="previous" class="previous action-button-previous" value="Previous" />
        </fieldset>
        <fieldset>
            <div class="form-card">
                <div class="row">
                    <div class="col-7">
                        <h2 class="fs-title">Image Upload:</h2>
                    </div>
                    <div class="col-5">
                        <h2 class="steps">Step 3 - 4</h2>
                    </div>
                </div>
                <label class="fieldlabels">Upload Your Photo:</label>
                <input type="file" name="pic" accept="image/*">
                <label class="fieldlabels">Upload Signature Photo:</label>
                <input type="file" name="pic" accept="image/*">



            </div>
            <input type="submit" name="next" class="next action-button" value="Submit" />
            <input type="button" name="previous" class="previous action-button-previous" value="Previous" />
        </fieldset>
        <fieldset>
            <div class="form-card">
                <div class="row">
                    <div class="col-7">
                        <h2 class="fs-title">Finish:</h2>
                    </div>
                    <div class="col-5">
                        <h2 class="steps">Step 4 - 4</h2>
                    </div>
                </div> <br><br>
                <h2 class="purple-text text-center"><strong>SUCCESS !</strong></h2> <br>
                <div class="row justify-content-center">
                    <div class="col-3">
                        <img src="~/Images/img.png" class="fit-image" />
                    </div>
                </div> <br><br>
                <div class="row justify-content-center">
                    <div class="col-7 text-center">
                        <h5 class="purple-text text-center">You Have Successfully Signed Up</h5>
                    </div>
                </div>
            </div>
        </fieldset>
    </form>
</div>

